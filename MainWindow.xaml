<Window x:Class="GiveMeWisdomNowPlease.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Give me wisdom now please"
        Height="144"
        Width="300"
        Icon="Icon.ico"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox
            Grid.Row="0"
            Name="Wisdom"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="Auto"
            TextWrapping="Wrap"
            TextAlignment="Center"
            IsReadOnly="True"
            BorderThickness="0"
            Margin="12,0,12,0"
            />
        <Button
            Grid.Row="1"
            Name="NewWisdom"
            HorizontalAlignment="Center"
            Content="Give me new wisdom now please"
            Click="NewWisdom_Click"
            VerticalAlignment="Bottom"
            Margin="0,0,0,12"
            />
    </Grid>
</Window>
